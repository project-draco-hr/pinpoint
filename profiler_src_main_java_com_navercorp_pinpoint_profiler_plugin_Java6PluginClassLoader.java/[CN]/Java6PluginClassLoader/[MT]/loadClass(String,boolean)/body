{
  ClassLoaderLock.lock(this);
  try {
    Class<?> c=findLoadedClass(name);
    if (c == null) {
      try {
        c=getParent().loadClass(name);
      }
 catch (      ClassNotFoundException e) {
      }
      if (c == null) {
        c=findClass(name);
      }
    }
    if (resolve) {
      resolveClass(c);
    }
    return c;
  }
  finally {
    ClassLoaderLock.unlock(this);
  }
}
