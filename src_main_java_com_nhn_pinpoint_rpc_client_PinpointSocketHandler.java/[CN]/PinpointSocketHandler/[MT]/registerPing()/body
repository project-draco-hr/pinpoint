{
  this.channelTimer.newTimeout(new TimerTask(){
    @Override public void run(    Timeout timeout) throws Exception {
      if (timeout.isCancelled()) {
        return;
      }
      if (isClosed()) {
        return;
      }
      sendPingInternal();
      registerPing();
    }
  }
,pingDelay,TimeUnit.MILLISECONDS);
}
