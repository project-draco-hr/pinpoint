{
switch (point) {
case ALWAYS:
    depth++;
  return true;
case BOUNDARY:
if (isIn()) {
  skippedBoundary++;
  return false;
}
 else {
  depth++;
  return true;
}
case INTERNAL:
if (isIn()) {
depth++;
return true;
}
 else {
return false;
}
default :
throw new IllegalArgumentException("Unexpected: " + point);
}
}
