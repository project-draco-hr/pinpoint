{
  if (bindValueArray == null) {
    return "";
  }
  final StringBuilder sb=new StringBuilder(32);
  final int length=bindValueArray.length;
  final int end=length - 1;
  for (int i=0; i < length; i++) {
    sb.append(bindValueArray[i]);
    if (sb.length() > limit) {
      break;
    }
    if (i < end) {
      sb.append(", ");
    }
  }
  return sb.toString();
}
