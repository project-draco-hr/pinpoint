{
  while (true) {
    DatagramPacket datagramPacket=newDatagramPacket(70000);
    try {
      receiver.receive(datagramPacket);
      logger.info("data size:" + datagramPacket.getLength());
    }
 catch (    IOException e) {
      logger.log(Level.WARNING,"receive error:" + e.getMessage(),e);
    }
  }
}
