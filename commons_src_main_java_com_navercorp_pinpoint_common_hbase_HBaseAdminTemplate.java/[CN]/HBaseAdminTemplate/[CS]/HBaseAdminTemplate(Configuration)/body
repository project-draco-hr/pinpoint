{
  try {
    this.hBaseAdmin=new HBaseAdmin(configuration);
  }
 catch (  MasterNotRunningException e) {
    throw new HbaseSystemException(e);
  }
catch (  ZooKeeperConnectionException e) {
    throw new HbaseSystemException(e);
  }
catch (  IOException e) {
    throw new HbaseSystemException(e);
  }
}
