{
  final Buffer buffer=new FixedBuffer(bufferSize);
  buffer.putVar(v);
  if (offset != -1) {
    Assert.assertEquals(buffer.getOffset(),offset);
  }
 else {
    logger.info("{} offsetSize:{}",v,buffer.getOffset());
  }
  buffer.setOffset(0);
  int readV=buffer.readVarInt();
  Assert.assertEquals(readV,v);
}
