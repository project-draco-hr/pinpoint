{
  if (bytes == null) {
    return null;
  }
  if (offset < 0) {
    throw new IllegalArgumentException("negative offset:" + offset);
  }
  if (length == 0) {
    return "";
  }
  try {
    return new String(bytes,offset,length,UTF8);
  }
 catch (  UnsupportedEncodingException e) {
    LOGGER.log(Level.SEVERE,"UTF-8 encoding fail.",e);
    return null;
  }
}
