{
  if (bytes == null) {
    bytes=EMPTY;
  }
  if (bytes.length > totalLength) {
    throw new IndexOutOfBoundsException("bytes too big:" + bytes.length + " totalLength:"+ totalLength);
  }
  put(bytes);
  final int padSize=totalLength - bytes.length;
  if (padSize > 0) {
    putPad(padSize);
  }
}
