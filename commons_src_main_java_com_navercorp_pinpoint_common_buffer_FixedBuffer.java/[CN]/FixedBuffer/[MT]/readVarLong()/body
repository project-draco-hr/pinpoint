{
  final byte[] buffer=this.buffer;
  int offset=this.offset;
  int shift=0;
  long result=0;
  while (shift < 64) {
    final byte v=buffer[offset++];
    result|=(long)(v & 0x7F) << shift;
    if ((v & 0x80) == 0) {
      this.offset=offset;
      return result;
    }
    shift+=7;
  }
  throw new IllegalArgumentException("invalid varLong. start offset:" + this.offset + " readOffset:"+ offset);
}
