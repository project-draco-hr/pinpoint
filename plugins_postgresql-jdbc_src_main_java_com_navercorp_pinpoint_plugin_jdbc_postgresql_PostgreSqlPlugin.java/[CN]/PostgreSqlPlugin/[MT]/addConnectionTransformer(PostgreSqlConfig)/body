      target.addScopedInterceptor("com.navercorp.pinpoint.plugin.jdbc.postgresql.interceptor.PostgreSqlPreparedStatementCreateInterceptor2",PostgreSqlConstants.GROUP_NAME);
      return target.toBytecode();
    }
  }
);
